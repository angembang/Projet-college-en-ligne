                            {{ classe.getLevel }}
                        </option>
                    {% endfor %}
                </select>
            </fieldset>
            
            <!-- The teacher fiel -->
            <fieldset>
                <label for="idTeacher">Professeur :</label>
                <select id="idTeacher" name="idTeacher">
                    <!-- Loop to display teacher selection optiobs -->
                    {% for teacher in teachers %}
                        <option value = "{{ teacher.getId() }}">
                            {{ teacher.getFirstName() }} 
                            {{ teacher.getLastName }}
                        </option>
                    {% endfor %}
                </select>
            </fieldset>
            
            <!-- the timeTable field -->
            <fieldset>
                <label for="idTimeTable">Horaire :</label>
                <select id="idTimeTable" name="idTimeTable">
                    <!-- Loop to display timeTable selection options -->
                    {% for timeTable in timesTables %}
                        <option value = "{{ timeTable.getId() }}">
                            {{ timeTable.getWeekDay() }} 
                            {{ timeTable.getStartTime() }} 
                            {{ timeTable.getEndTime() }}
                        </option>
                </select>
            </fieldset>
        
        </fieldset>
        
        <!-- Registration button -->
        <button type="submit" value="Submit">Ajouter</button>
    
    </form>
{% endblock %}