<!-- Extends the layout.html.twig  template to the page -->
{% extends "layout.html.twig" %}


{% block main %}

    
    <h1>Ajout des cours</h1>
    
    <!-- Add lesson form -->
    <form action="index.php?route=checkAddLesson" method="post">
        
        <fieldset>
            
            <!-- The lesson name field  -->
            <fieldset>
                <label for="name">Nom du cours:</label>
                <input type="text" id="name" name="name">
            </fieldset>
            
            <!-- The classe field  -->
            <fieldset>
                <label for="idClass">Classe :</label>
                <select id="idClass" name="idClass">
