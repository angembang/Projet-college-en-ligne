{% extends "layout.html.twig" %}

{%block head %}
    <!-- Include parent block content -->
    {{ parent() }}
    <!-- Include additional stylesheet -->
    <link rel="stylesheet" type="text/css" href="./assets/styles/css/home.css">    
{% endblock %}


{% block header %}
    
    <!-- Menu -->
    <nav id="menu">
        <!-- Hamburger menu icon -->
        <button id="menu-icon">
            <i class="fas fa-bars"></i>
        </button>
        <ul class="display-none">
            <li><a href="index.php?route=about">A Propos</a></li>
        </ul>
    </nav>
    <!-- Title of the plateform-->
    <h1>Collège en ligne</h1>
    
{% endblock %}

{% block main %}
    <h2>Collégiens de la {{ className }}</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for collegian in collegians %}
                <tr>
                    <td>{{ collegian.id }}</td> 
                    <td>{{ collegian.firstName }}</td>
                    <td>{{ collegian.lastName }}</td> 
                    <td>
                        <a href="index.php?route=edit-collegian&id={{ collegian.id }}" title="Edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="index.php?route=delete-collegian&id={{ collegian.id }}" title="Delete" onclick="return confirm('Are you sure you want to delete this collegian?');">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
{% endblock %}

{% block footer %}
    <!-- Footer links -->
    <a href="#">Mentions légales</a>
    <a href="#">Politique de confidentialité</a>
    <a href="#">Gestion des cookies</a>
    
{% endblock %}
