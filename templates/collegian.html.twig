{% extends "layout.html.twig" %}

{%block head %}
    <!-- Include parent block content -->
    {{ parent() }}
    <!-- Include additional stylesheet -->
    <link rel="stylesheet" type="text/css" href="./assets/styles/css/home.css">    
{% endblock %}


{% block header %}
    {% include "header.html.twig" %}
{% endblock %}

{% block main %}
<section class="collegian-page">
    <h2>Collégiens de la {{ className }}</h2>
    <table class="table table-bordered border-primary">
        <thead>
             <tr>
            <th scope="col">Prénom</th>
            <th scope="col">Nom</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for collegian in collegians %}
            <tr>
                <td>{{ collegian.firstName }}</td>
                <td>{{ collegian.lastName }}</td>
                <td>
                    <a href="index.php?route=edit-collegian&id={{ collegian.id }}" title="Edit" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="index.php?route=delete-collegian&id={{ collegian.id }}" title="Delete" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this collegian?');">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
    </table>
</section>    
{% endblock %}

{% block footer %}
   {% include "footer.html.twig" %}
{% endblock %}
