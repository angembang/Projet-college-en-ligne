{% block main %}
    <div class="home">
        <!-- Main content links -->
        {% for role in roles %}
            {% if role.name == "Principal" %}
                <p><a href="index.php?route=register-login">{{ role.name }}</a></p>
            {% else %}
                <p><a href="index.php?route=connexion&role={{ role.id }}">{{ role.name }}</a></p>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}


