{% extends "layout.html.twig" %}

{% block main %}
    <h1>Formulaire d'ajout de cours</h1>
    <form action="" method="post" enctype="multipart/form-data">
        <fieldset>
            <fieldset>
                <label for="idLesson">ID de la leçon :</label>
                <select id="idLesson" name="idLesson" required>
                    <option value="" disabled selected>Sélectionner une leçon</option>
                    <!-- Loop to display lesson selection options -->
                    {% for lesson in lessons %}
                        <option value="{{lesson.id}}">{{lesson.name}}</option>
                    {% endfor %}
                </select>   
            </fieldset>
            <fieldset>
                <label for="unlockdate">Date de déblocage :</label>
                <input type="date" id="unlockdate" name="unlockdate" required>    
            </fieldset>
            <fieldset>
                <label for="subject">Sujet :</label>
                <input type="text" id="subject" name="subject" required>    
            </fieldset>
            <fieldset>
                <label for="content">Contenu :</label><br>
                <textarea id="content" name="content" required></textarea>   
            </fieldset>
            <button type="submit">Ajouter le cours</button>
        </fieldset>
    </form>
    <script type="module" src="./assets/js/main.js"></script>
    
{% endblock %}