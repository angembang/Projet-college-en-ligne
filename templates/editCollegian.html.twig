{% extends "layout.html.twig" %}

{% block main %}
    <h2>Edit Collegian</h2>
    <form method="post" action="index.php?route=edit-collegian">
        <input type="hidden" name="id" value="{{ collegian.id }}">
        <div>
            <label for="firstName">Prénom :</label>
            <input type="text" id="firstName" name="firstName" value="{{ collegian.firstName }}" required>
        </div>
        <div>
            <label for="lastName">Nom :</label>
            <input type="text" id="lastName" name="lastName" value="{{ collegian.lastName }}" required>
        </div>
        <div>
            <label for="email">Email :</label>
            <input type="email" id="email" name="email" value="{{ collegian.email }}" required>
        </div>
        <div>
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="password" value="{{ collegian.password }}" required>
        </div>
        <div>
            <label for="classId">Classe :</label>
            <input type="text" id="classId" name="classId" value="{{ collegian.idClass }}" required>
        </div>
        <div>
            <label for="idLanguage">Langue :</label>
            <input type="text" id="idLanguage" name="idLanguage" value="{{ collegian.idLanguage }}" required>
        </div>
        <div>
            <label for="idRole">Rôle :</label>
            <input type="text" id="idRole" name="idRole" value="{{ collegian.idRole }}" required>
        </div>
        <div>
            <button type="submit">Sauvegarder</button>
        </div>
    </form>
{% endblock %}